<div data-controller="infinite-scroll-window snippets-list" data-infinite-scroll-window-base-url="<%= snippets_path %>">

  <div class="mb-4 relative">
    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
      <!-- Heroicon name: solid/mail -->
      <%= image_tag '/icons/grey/search.svg', class: 'text-gray-400 h-5 w-5' %>
      <%# <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
        <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
        <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
      </svg> %>
    </div>
    <input
      type="text" 
      class="focus:ring-indigo-500 focus:border-indigo-500 block w-1/2 pl-10 sm:text-sm border-gray-300 rounded-sm shadow-sm"
      placeholder="Search your snippets"
      data-action="input->infinite-scroll-window#search"
      data-infinite-scroll-window-target="input"
    >
  </div>

  <div
    data-infinite-scroll-window-target="entries"
    data-action="scroll@window->infinite-scroll-window#scroll snippet-created@window->infinite-scroll-window#add snippet-updated@window->snippets-list#update"
  >
    <%= render 'snippets/snippets' %>
  </div>

  <div data-infinite-scroll-window-target="pagination" class="hidden">
    <%= will_paginate @snippets, container: false %>
  </div>
</div>
